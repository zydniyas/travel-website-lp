---
const { img, place, price, days, element } = Astro.props;
---

<div
  class="shadow-2 rounded-25px mw-250px mw-md-315px w-100 card cursor-pointer position-relative"
>
  {
    element ? (
      <img
        class="position-absolute end-n70px bottom-45px z-index-n1"
        src="/public/assets/img/png/top-destination-decore.png"
        alt=""
      />
    ) : null
  }
  <img class="rounded-top-25px w-100 h-327px mw-315px" src={img} alt="" />
  <div class="px-20px pt-27px pb-42px">
    <div class="d-flex justify-content-between">
      <p class="text-dark-electric-blue fw-medium fs-18px">{place}</p>
      <p class="text-dark-electric-blue fw-medium fs-18px">${price}</p>
    </div>
    <div class="d-flex align-items-center gap-2">
      <img src="/assets/img/svg/navigation.svg" alt="" />
      <p class="text-dark-electric-blue fw-medium fs-15px mb-0">
        {days} Days Trip
      </p>
    </div>
  </div>
</div>
