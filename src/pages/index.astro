      </div>
      <p
        class="text-dark-electric-blue fw-normal fw-md-medium fs-14px text-center mb-70px"
      >
        All rights reserved@jadoo.co
      </p>
    </div>

    <!--  footer section end -->
  </div>
  <script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
      const testimonials = document.querySelectorAll(".testimonial");
      const nextButton = document.getElementById("nextButton");
      const prevButton = document.getElementById("prevButton");
      const prevButton2 = document.getElementById("prevButton2");
      let activeIndex = 0;

      nextButton.addEventListener("click", function () {
        changeActive(1);
      });

      prevButton.addEventListener("click", function () {
        changeActive(-1);
      });
      prevButton2.addEventListener("click", function () {
        changeActive(-1);
      });

      function changeActive(step) {
        testimonials[activeIndex].classList.remove("active");
        activeIndex =
          (activeIndex + step + testimonials.length) % testimonials.length;
        testimonials[activeIndex].classList.add("active");
      }
    });
  </script>
</Layout>
